<div class="main-wrapper crud-wrapper">
  <div class="form-wrapper">
    <h2 class="login-header">Edit dashboard</h2>
    <%= form_for :dashboard, url: dashboard_path(@dashboard) , method: :patch do |f| %>
      <% if @dashboard.errors.any? %>
        <% @dashboard.errors.full_messages.each do |msg| %>
          <div class="alert alert-danger">
            <%= msg %>
          </div>
        <% end %>
      <% end %>
      <p>
        <%=f.text_field :title, placeholder: :title, :class => "form-control" %>
      </p>
      <p>
        <%=f.text_area :body, rows: 20 ,placeholder: :body ,:class => "form-control"%>
      </p>
      <div class="buttons-wrapper-with-back-btn">
        <div>
          <%= f.submit "Save", :class => "main-btn green-btn confirm-btn" %>
        </div>
        <%= link_to "Back", dashboard_path, :class => "btn main-btn main-back-btn" %>
      </div>
    <% end %>
  </div>
</div>
